<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>
      {{ site.title }}{% if title %}: {{ title }}{% endif %} {% if subtitle %} -
      {{ subtitle }}{% endif %}
    </title>

    <style type="text/css">
      .sr-only {
        position: absolute;
        clip: rect(1px, 1px, 1px 1px) !important;
        position: 0 !important;
        border: 0 !important;
        height: 1px !important;
        width: 1px !important;
        overflow: hidden !important;
      }
    </style>
    {% rendersection "styles" %}
    <!---->
    {% if site.environment === 'production' %}
    <script
      defer
      src="https://unpkg.com/alpinejs@3.x.x/dist/cdn.min.js"
    ></script>
    {% else %}
    <script defer src="https://unpkg.com/alpinejs@3.x.x/dist/cdn.js"></script>
    {% endif %}
    <!---->
    {% rendersection "preloads" %}
  </head>

  <body>
    <main>
      {{ content | safe }}
    </main>
    <div
      role="status"
      class="sr-only"
      x-data
      x-text="$store.live.message"
      :aria-live="$store.live.level"
    ></div>
    <script>
      document.addEventListener("alpine:init", () => {
        Alpine.store("live", {
          message: "",
          level: "polite",
          announce(message) {
            this.message = message;
            this.level = "polite";
          },
          assert(message) {
            this.message = message;
            this.level = "assertive";
          },
        });
      });
    </script>
    {% rendersection "scripts" %}
  </body>
</html>
